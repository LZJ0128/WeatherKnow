<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/txv_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="02-26"/>

        <TextView
            android:id="@+id/txv_weekday1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txv_date1"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:text="星期五"/>

        <ImageView
            android:id="@+id/img_weather1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txv_temp_max"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txv_temp_line"
            android:textSize="16sp"
            android:text="11"/>

        <TextView
            android:id="@+id/txv_temp_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txv_temp_min"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:text="~"/>

        <TextView
            android:id="@+id/txv_temp_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</LinearLayout>
